<!--레이아웃-->
<div class="login">
  <div class="row">
    <!-- 빈 그리드 -->
    <div class="col-xs-2">
    </div>
    <!-- 좌측 고래방 로고 -->
    <div class="col-xs-4">
      <div class="left_side">
        <a href="/"><img src="/image/whale_title.png" class="whale_title"></a>
        <%= render partial: "whale/flash_message", flash: flash %>
      </div>
    </div>
    <!-- 우측 form태그 -->    
    <div class="col-xs-4">
      <div class="right_side">
      <%= form_tag user_session_path, :method => :post do |f| %>
      <p class="whale_text">이메일 주소</p>
      <input type="email" name="user[email]" class="input"><br></input>
      <p class="whale_text">비밀번호</p>
      <input type="password" name="user[password]" class="input"></input>
      
        <div class="row" style="padding-top:10px">
        <% end %>
          <!--로그인버튼-->
          <div class="col-xs-5">
            <input type="submit" value="로그인" class="button">
          </div>
          <!--회원가입버튼-->
          <div class="col-xs-7">
            <button type="button" class="button" data-toggle="modal" data-target="#myModal">회원가입</button>
          </div>
        </div>          
        <!-- 회원 가입 팝업 -->
            <%= form_tag user_registration_path, :method => :post do |f| %>
            <div id="myModal" class="modal fade" role="dialog">
              <div class="modal-dialog">
                <!-- 회원 가입 팝업 내용-->
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <center><img src=/image/whale_title.png class="whale_title_main"></center>
                  </div>
                  <div class="modal-body">
                    <center>
                    <input type="text" name="user[nickname]" class="join_input" placeholder="닉네임"></input><br><br>                      
                    <input type="email" name="user[email]" class="join_input" placeholder="이메일"></input><br><br>
                    <input type="password" name="user[password]" class="join_input" placeholder="비밀번호(8자이상)"></input><br><br>
                    <input type="password" name="user[password_confirmation]" class="join_input" placeholder="비밀번호 재입력"></input><br>  
                    </center>
                  </div>
                  <div class="modal-footer">
                    <button class="btn btn-primary" style="border-radius:12px">가입하기</button>
                  </div>
                </div>
              </div>
            </div>
            <% end %>
    </div>       
    </div>
  </div>
</div>